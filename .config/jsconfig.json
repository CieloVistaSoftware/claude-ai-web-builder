{
  "compilerOptions": {
    "module": "ES2020",
    "moduleResolution": "node",
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "checkJs": true,
    "allowJs": true,
    "noEmit": true,
    "strict": false,
    "baseUrl": ".",
    "paths": {
      "@components/*": ["components/*"],
      "@core/*": ["core/*"]
    }
  },
  "include": [
    "components/**/*",
    "core/**/*",
    "src/**/*",
    "custom-elements.d.ts",
    "components/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
