{
  "name": "claude-ai-web-builder",
  "version": "0.1.0",
  "description": "Claude AI Website Builder - A powerful, interactive website builder with dynamic themes, edit mode, and responsive design",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/CieloVistaSoftware/claude-ai-web-builder.git"
  },
  "homepage": "https://github.com/CieloVistaSoftware/claude-ai-web-builder#readme",
  "bugs": {
    "url": "https://github.com/CieloVistaSoftware/claude-ai-web-builder/issues"
  },
  "author": "CieloVista Software",
  "license": "MIT",
  "keywords": [
    "website-builder",
    "claude-ai",
    "responsive-design",
    "typescript",
    "vite",
    "playwright"
  ],
  "scripts": {
    "kill-port": "kill-port 8000",
    "build-ts": "tsc",
    "server": "ts-node server.ts",
    "server-js": "node server.js",
        "start": "cd wb && npm start",
    "wb-setup": "cd wb && npm install",
    "old-server": "npm run kill-port && npm run update-docs-index && npm run server",
    "start-js": "npm run kill-port && npm run update-docs-index && npm run server-js",
    "start-table-theme": "npm run kill-port && npm run update-docs-index && npm run server",
    "dev": "cd wb && npm install && npm run dev",
    "obfuscate": "node scripts/obfuscate-with-cleaning.js",
    "build-protected": "npm run obfuscate && npm run build",
    "protect-js": "javascript-obfuscator wb/wb.js --output wb/wb.min.js --compact true --self-defending true",
    "show-mcp": "node scripts/show-mcp-server.js",
    "test-mcp-server": "pwsh -Command \"./scripts/Test-MCPServer.ps1\"",
    "test-mcp-output": "pwsh -Command \"./scripts/Test-MCPOutputSite.ps1\"",
    "update-docs-index": "pwsh -Command \"./powershell/Update-DocsIndex.ps1\"",
    "build": "vite build",
    "serve": "vite preview",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "test:colorWheel": "playwright test Tests/playwright/colorWheel.spec.ts",
    "test:colorBar": "playwright test Tests/playwright/colorBar.spec.ts",
    "test:dynamicPages": "playwright test Tests/playwright/dynamicPages.spec.ts",
    "test:footer": "playwright test Tests/playwright/footer.spec.ts",
    "test:themeOrganization": "playwright test Tests/playwright/themeOrganization.spec.ts",
    "test:tableTheme": "playwright test Tests/playwright/tableTheme.spec.ts",
    "test:gridLayout": "playwright test Tests/playwright/gridLayout.spec.ts",
    "test:navWidth": "playwright test Tests/playwright/navWidth.spec.ts",
    "test:mediaPlaceholder": "playwright test Tests/playwright/mediaPlaceholder.spec.ts",
    "test:cssStandards": "playwright test Tests/playwright/cssStandards.spec.ts",
    "test:floatingTableTheme": "playwright test Tests/playwright/floatingTableTheme.spec.ts",
    "test:tabStyling": "playwright test Tests/playwright/tabStyling.spec.ts",
    "test:templateLoader": "playwright test Tests/playwright/templateLoader.spec.ts",
    "test:themeGeneratorSimple": "playwright test Tests/playwright/themeGeneratorSimple.spec.ts",
    "test:typescriptConfig": "playwright test Tests/playwright/typescriptConfig.spec.ts",
    "test:server": "curl http://localhost:8000/api/components || echo \"Server not running\"",
    "test:mcp": "playwright test Tests/playwright/mcp*.spec.ts",
    "test:mcpHealth": "playwright test Tests/playwright/mcpHealthCapabilities.spec.ts",
    "test:mcpValidation": "playwright test Tests/playwright/mcpValidation.spec.ts",
    "test:mcpGeneration": "playwright test Tests/playwright/mcpGeneration.spec.ts",
    "test:mcpComponents": "playwright test Tests/playwright/mcpComponentIntegration.spec.ts",
    "test:mcpDemo": "playwright test Tests/playwright/mcpClientDemo.spec.ts",
    "check-components": "node -e \"const fs=require('fs'); console.log('Components:', fs.readdirSync('./components'));\"",
    "check-themes": "node -e \"const fs=require('fs'); console.log('Themes:', fs.readdirSync('./themes').filter(f=>f.endsWith('.html')));\""
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "serve-static": "^2.2.0",
    "tailwindcss": "^3.0.0",
    "zustand": "^4.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.52.0",
    "@types/cors": "^2.8.18",
    "@types/express": "^4.17.22",
    "@types/node": "^20.17.50",
    "@types/serve-static": "^1.15.7",
    "autoprefixer": "^10.0.0",
    "axios": "^1.6.0",
    "javascript-obfuscator": "^4.1.0",
    "kill-port": "^2.0.1",
    "live-server": "^1.2.0",
    "postcss": "^8.0.0",
    "terser": "^5.19.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "vite": "^7.0.5",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.0"
  }
}
