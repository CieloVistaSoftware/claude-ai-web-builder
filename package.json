{
  "name": "website-builder",
  "version": "1.0.0",
  "description": "Claude AI Web Builder",
  "main": "index.html",
  "type": "module",
  "scripts": {
    "new": "node build/scripts/create-component.js",
    "component:new": "node build/scripts/create-component.js",
    "create": "node build/scripts/create-component.js",
    "vite": "vite --config build/vite.config.js",
    "demo": "node scripts/utils/start-demo.js",
    "demo:here": "node scripts/utils/start-demo.js",
    "demo:debug": "node scripts/utils/debug-env.js",
    "api": "node claude-events-api.js",
    "check-server": "node scripts/utils/check-server.js",
    "claude:build": "npx tsc claude-socket-server.ts --esModuleInterop --resolveJsonModule --target ES2020 --module ESNext --moduleResolution Node",
    "claude:server": "npm run kill-port && npm run claude:build && node claude-socket-server.js",
    "claude:test": "npm run kill-port && npm run claude:build && node claude-socket-server.js",
    "convert": "node build/scripts/html-converter.js",
    "dev": "npm run nuke && npm run wb:build && concurrently \"npm run wb:build:watch\" \"http-server -p 8080 -o /index.html\"",
    "dev:safe": "npm run kill-port && npm run wb:build && http-server -p 8080 -o /index.html",
    "dev:simple": "npm run kill-port && http-server -p 8080 -o /wb.html",
    "dev:watch": "node build/scripts/build-symbols.js watch",
    "discover": "node build/scripts/component-discovery.js",
    "kill-port": "node scripts/utils/kill-port.js",
    "nuke": "npm run kill-port",
    "remove-puppeteer": "npm list puppeteer && npm remove puppeteer",
    "schemas:docs": "generate-docs from schemas",
    "schemas:list": "find . -name '*.schema.json' -type f",
    "schemas:validate": "ajv validate -s '**/*.schema.json'",
    "serve": "npm run kill-port && http-server ./dist -p 3000",
    "serve:root": "npm run kill-port && http-server ./dist -p 8080 -o /index.html",
    "socket:test": "node scripts/test-websocket.js",
    "start": "npm run kill-port && concurrently \"node src/server/claude-events-api.js\" \"http-server -p 8080 -o /index.html\"",
    "start-mcp": "cd mcp-docs-server && npm start",
    "test": "npm run kill-port && playwright test",
    "test:all": "npm run kill-port && playwright test",
    "test:category": "npm run kill-port && playwright test --grep",
    "test:config": "npm run kill-port && playwright test",
    "test:failfast": "npm run kill-port && playwright test -x",
    "test:safe": "npm run kill-port && playwright test",
    "test:serve": "npm run kill-port && start-server-and-test 'http-server -p 3000' http://localhost:3000 'playwright test'",
    "test:socket-only": "npm run kill-port && playwright test --grep socket",
    "test:ui": "npm run kill-port && playwright test --ui",
    "test:ui-only": "npm run kill-port && playwright test --ui",
    "test:debug": "npm run kill-port && playwright test --debug",
    "test:headed": "npm run kill-port && playwright test --headed",
    "test:report": "playwright show-report",
    "test:html-paths": "pwsh tests/run-tests.ps1",
    "test:html-paths:verbose": "pwsh tests/run-tests.ps1 -Verbose",
    "test:pester": "pwsh -Command \"Invoke-Pester -Path tests/fix-all-html-paths.tests.ps1 -Verbose\"",
    "unified:build": "npx tsc unified-claude-websocket-server.ts --esModuleInterop --resolveJsonModule --target ES2020 --module ESNext --moduleResolution Node",
    "unified:server": "npm run kill-port && npm run unified:build && node unified-claude-websocket-server.js",
    "unified:server:mock": "SET USE_MOCK_RESPONSES=true && npm run unified:server",
    "watch": "node build/scripts/file-watcher.js",
    "wb:build": "cd components/wb-website-builder && npm run build",
    "wb:build:watch": "cd components/wb-website-builder && npm run build:watch",
    "wb:dev": "npm run kill-port && npm run wb:build && concurrently \"npm run wb:build:watch\" \"npm run wb:serve\"",
    "wb:install": "cd components/wb-website-builder && npm install",
    "wb:serve": "http-server -p 8080 -o /components/wb-website-builder/dist/complete-demo.html",
    "wb:serve:demo": "http-server -p 8080 -o /components/wb-website-builder/dist/wb-website-builder-demo.html",
    "wb:serve:root": "http-server -p 8080 -o /index.html",
    "wb:setup": "npm run wb:install && npm run wb:build",
    "build:html-data": "node build/scripts/build-components-json.js",
    "build:imports": "node build/scripts/gen-main-imports.js",
    "analyze:cem": "cem analyze",
    "check-status": "pwsh -ExecutionPolicy Bypass -File ./scripts/check-claude-status-v3.ps1",
    "mark-updated": "pwsh -ExecutionPolicy Bypass -File ./scripts/mark-claude-updated-v3.ps1",
    "init-markers": "pwsh -ExecutionPolicy Bypass -File ./scripts/initialize-claude-v3.ps1",
    "detect-unfinished": "pwsh -ExecutionPolicy Bypass -File ./scripts/detect-unfinished-work.ps1",
    "detect-priority": "pwsh -ExecutionPolicy Bypass -File ./scripts/detect-priority-levels.ps1",
    "build:kb": "node build/scripts/build-knowledge-base.js",
    "assistant": "npm run build:kb && npm run dev",
    "assistant:kb": "npm run build:kb",
    "rag": "npm run build:kb && node components/wb-rag/rag-server.js",
    "rag:build": "npm run build:kb",
    "rag:server": "node components/wb-rag/rag-server.js",
    "rag:demo": "npm run rag:server",
    "build:demos": "node build/scripts/generate-demos-manifest.js",
    "build": "npm run build:demos && start index.html",
    "prebuild": "npm run build:demos",
    "predev": "npm run build:demos",
    "prestart": "npm run build:demos",
    "build:audit": "node build/scripts/audit-components.js",
    "test-server": "pwsh -ExecutionPolicy Bypass -File ./scripts/kill-port-8081.ps1 && http-server -p 8081"
  },
  "devDependencies": {
    "@custom-elements-manifest/analyzer": "^0.10.10",
    "@playwright/test": "^1.56.1",
    "@types/node": "^24.0.15",
    "@types/socket.io": "^3.0.1",
    "ajv-cli": "^0.6.0",
    "chokidar": "^3.5.3",
    "concurrently": "^8.2.2",
    "express": "^5.1.0",
    "http-server": "^14.1.1",
    "jest": "^29.6.0",
    "jsdom": "^22.1.0",
    "serve": "^14.2.5",
    "start-server-and-test": "^2.0.2",
    "ts-loader": "^9.5.4",
    "typescript": "^5.8.3",
    "vite": "^7.0.5"
  },
  "dependencies": {
    "lucide-react": "^0.542.0",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "vscode-html-languageservice": "^5.5.2"
  },
  "customElements": "data/custom-elements.json"
}
