{
  "name": "website-builder",
  "version": "1.0.0",
  "description": "Claude AI Web Builder",
  "main": "index.html",
  "type": "module",
  "workspaces": [
    "mcp-docs-server",
    "mcp-server"
  ],
  "scripts": {
    "api": "node claude-events-api.js",
    "build:socket": "npx tsc websocket-server-manager.ts start-websocket-server.ts claude-websocket-server.ts --esModuleInterop --resolveJsonModule --target ES2020 --module ESNext --moduleResolution Node",
    "build": "npm run wb:build && npm run serve:root",
  "build:scripts": "npm run build:components && npm run build:cssdata && npm run build:manifest && npm run build:symbols",
  "build:components": "node scripts/build-components-json.cjs",
    "build:cssdata": "node tools/generate-css-data.cjs",
    "build:manifest": "node scripts/build-manifest.js",
    "build:symbols": "node tools/build-symbols.js build",
    "check-server": "node server-health-check.js",
    "claude:build": "npx tsc claude-socket-server.ts --esModuleInterop --resolveJsonModule --target ES2020 --module ESNext --moduleResolution Node",
    "claude:server": "npm run kill-port && npm run claude:build && node claude-socket-server.js",
    "claude:test": "npm run kill-port && npm run claude:build && node claude-socket-server.js",
    "convert": "node conversion/cli-converter.js",
    "dev": "npm run nuke && npm run wb:build && concurrently \"npm run wb:build:watch\" \"http-server -p 8080 -o /index.html\"",
    "dev:safe": "taskkill /F /IM node.exe /T && timeout /t 2 /nobreak >nul && npm run wb:build && http-server -p 8080 -o /index.html",
    "dev:simple": "npm run wb:build && http-server -p 8080 -o /index.html",
    "dev:watch": "node tools/build-symbols.js watch",
    "discover": "node tools/component-discovery.js",
    "kill-port": "node kill-port.js",
    "nuke": "taskkill /F /IM node.exe /T & timeout /t 1 /nobreak >nul & node kill-port.js",
    "remove-puppeteer": "node remove-puppeteer.js",
    "schemas:docs": "generate-docs from schemas",
    "schemas:list": "find . -name '*.schema.json' -type f",
    "schemas:validate": "ajv validate -s '**/*.schema.json'",
    "serve": "npm run kill-port && http-server -p 3000",
    "serve:root": "npm run kill-port && http-server -p 8080 -o /index.html",
    "socket:test": "npm run build:socket && node start-websocket-server.js",
    "start": "npm run dev",
    "start-mcp": "cd mcp-docs-server && npm start",
    "test": "npm run kill-port && playwright test --config=playwright.real.config.cjs",
    "test:all": "node run-all-tests.js",
    "test:category": "node run-all-tests.js --categories",
    "test:config": "node test-with-config.js",
    "test:failfast": "npm run kill-port && playwright test -x --config=playwright.config.js",
    "test:safe": "node server-health-check.js && playwright test --config=playwright.real.config.js",
    "test:serve": "start-server-and-test 'http-server -p 3000' http://localhost:3000 'playwright test --config=playwright.real.config.js'",
    "test:socket-only": "node run-all-tests.js --categories socket --loglevel=verbose",
    "test:ui": "npm run kill-port && playwright test --ui --config=playwright.real.config.cjs",
    "test:ui-only": "node run-all-tests.js --categories ui --loglevel=verbose",
    "unified:build": "npx tsc unified-claude-websocket-server.ts --esModuleInterop --resolveJsonModule --target ES2020 --module ESNext --moduleResolution Node",
    "unified:server": "npm run kill-port && npm run unified:build && node unified-claude-websocket-server.js",
    "unified:server:mock": "SET USE_MOCK_RESPONSES=true && npm run unified:server",
    "validate:components": "node tools/build-symbols.js validate",
    "watch": "node conversion/file-watcher.js",
    "wb:build": "cd components/wb-website-builder && npm run build",
    "wb:build:watch": "cd components/wb-website-builder && npm run build:watch",
    "wb:dev": "npm run kill-port && npm run wb:build && concurrently \"npm run wb:build:watch\" \"npm run wb:serve\"",
    "wb:install": "cd components/wb-website-builder && npm install",
    "wb:serve": "http-server -p 8080 -o /components/wb-website-builder/dist/complete-demo.html",
    "wb:serve:demo": "http-server -p 8080 -o /components/wb-website-builder/dist/wb-website-builder-demo.html",
    "wb:serve:root": "http-server -p 8080 -o /index.html",
    "wb:setup": "npm run wb:install && npm run wb:build"
  },
  "devDependencies": {
    "@playwright/test": "^1.37.0",
    "chokidar": "^3.5.3",
    "concurrently": "^8.2.2",
    "http-server": "^14.1.1",
    "jest": "^29.6.0",
    "jsdom": "^22.1.0",
    "start-server-and-test": "^1.11.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@types/socket.io": "^3.0.1",
    "express": "^5.1.0",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1"
  }
}