{
  "name": "wb-card",
  "version": "1.0.0",
  "description": "Flexible card component with multiple layouts, variants, and content types",
  "category": "layout",
  "tags": ["card", "container", "layout", "content", "responsive"],
  "author": "WB Components",
  "license": "MIT",
  "dependencies": [],
  "attributes": {
    "variant": {
      "type": "string",
      "enum": ["default", "outlined", "elevated", "flat", "glass"],
      "default": "default",
      "description": "Visual style variant"
    },
    "layout": {
      "type": "string",
      "enum": ["vertical", "horizontal", "media-top", "media-left", "media-right"],
      "default": "vertical",
      "description": "Content layout orientation"
    },
    "size": {
      "type": "string",
      "enum": ["small", "medium", "large", "xl"],
      "default": "medium",
      "description": "Card size preset"
    },
    "padding": {
      "type": "string",
      "enum": ["none", "small", "medium", "large"],
      "default": "medium",
      "description": "Internal padding amount"
    },
    "rounded": {
      "type": "boolean",
      "default": true,
      "description": "Enable rounded corners"
    },
    "clickable": {
      "type": "boolean",
      "default": false,
      "description": "Make entire card clickable"
    },
    "href": {
      "type": "string",
      "description": "URL to navigate to when clicked (requires clickable=true)"
    },
    "target": {
      "type": "string",
      "enum": ["_self", "_blank", "_parent", "_top"],
      "default": "_self",
      "description": "Link target when clickable"
    }
  },
  "slots": [
    {
      "name": "header",
      "description": "Card header content"
    },
    {
      "name": "media", 
      "description": "Media content (images, videos)"
    },
    {
      "name": "default",
      "description": "Main card content"
    },
    {
      "name": "footer",
      "description": "Card footer content"
    },
    {
      "name": "actions",
      "description": "Action buttons or controls"
    }
  ],
  "events": [
    {
      "name": "wb-card-ready",
      "description": "Fired when card is initialized"
    },
    {
      "name": "wb-card-click",
      "description": "Fired when card is clicked (if clickable)",
      "detail": {
        "href": "string",
        "target": "string"
      }
    }
  ],
  "methods": [
    {
      "name": "setVariant",
      "params": ["variant: string"],
      "description": "Change card visual variant"
    },
    {
      "name": "setLayout",
      "params": ["layout: string"],
      "description": "Change card layout"
    },
    {
      "name": "setClickable",
      "params": ["clickable: boolean", "href?: string"],
      "description": "Enable/disable clickable behavior"
    }
  ],
  "cssCustomProperties": {
    "--wb-card-bg": "var(--surface-color)",
    "--wb-card-border": "var(--border-color)",
    "--wb-card-shadow": "var(--shadow-md)",
    "--wb-card-radius": "var(--border-radius)",
    "--wb-card-padding": "1.5rem",
    "--wb-card-gap": "1rem",
    "--wb-card-transition": "all 0.2s ease",
    "--wb-card-hover-shadow": "var(--shadow-lg)",
    "--wb-card-hover-transform": "translateY(-2px)"
  },
  "variants": {
    "default": "Standard card with background and border",
    "outlined": "Card with border only, no background",
    "elevated": "Card with elevated shadow effect",
    "flat": "Minimal card with no shadow or border",
    "glass": "Glassmorphism effect with backdrop blur"
  },
  "accessibility": {
    "roles": ["article", "button"],
    "features": [
      "Focus management for clickable cards",
      "ARIA labels for interactive elements",
      "Keyboard navigation support",
      "Screen reader compatible"
    ]
  },
  "examples": {
    "basic": "<wb-card><h3>Card Title</h3><p>Card content goes here.</p></wb-card>",
    "withMedia": "<wb-card layout=\"media-top\"><img slot=\"media\" src=\"image.jpg\"><h3>Title</h3><p>Content</p></wb-card>",
    "clickable": "<wb-card clickable href=\"#link\" variant=\"elevated\"><h3>Clickable Card</h3></wb-card>",
    "glass": "<wb-card variant=\"glass\" rounded><div slot=\"header\"><h3>Glass Card</h3></div><p>Beautiful glassmorphism effect</p></wb-card>"
  },
  "files": {
    "js": "wb-card.js",
    "css": "wb-card.css",
    "demo": "wb-card-demo.html",
    "docs": "wb-card.md",
    "schema": "wb-card.schema.json"
  }
}