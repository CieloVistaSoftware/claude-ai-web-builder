{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "WB Semantic Elements",
  "description": "Web component that ensures all required semantic HTML5 elements exist on the page",
  "type": "object",
  "properties": {
    "tagName": {
      "type": "string",
      "const": "wb-semantic-elements"
    },
    "version": {
      "type": "string",
      "default": "1.0.0"
    },
    "category": {
      "type": "string",
      "default": "structure"
    },
    "dependencies": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "default": []
    },
    "attributes": {
      "type": "object",
      "properties": {
        "data-wb-semantic": {
          "type": "string",
          "description": "Marks auto-generated semantic elements"
        }
      }
    },
    "semanticElements": {
      "type": "array",
      "description": "List of semantic HTML5 elements to ensure exist",
      "items": {
        "type": "string",
        "enum": ["nav", "header", "main", "footer"]
      },
      "default": ["nav", "header", "main", "footer"]
    },
    "styling": {
      "type": "object",
      "properties": {
        "autoGeneratedStyles": {
          "type": "boolean",
          "description": "Whether to apply visual indicators to auto-generated elements",
          "default": true
        }
      }
    }
  },
  "required": ["tagName"]
}