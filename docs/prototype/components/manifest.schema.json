{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "WB Component Manifest",
  "description": "Schema for defining WB component loading order and dependencies",
  "type": "object",
  "properties": {
    "version": {
      "type": "string",
      "description": "Manifest version"
    },
    "description": {
      "type": "string",
      "description": "Description of this manifest"
    },
    "infrastructure": {
      "type": "array",
      "description": "Infrastructure files to load first (from utils/wb/)",
      "items": {
        "type": "string",
        "pattern": "^[a-z-]+\\.js$"
      }
    },
    "styles": {
      "type": "array",
      "description": "Style utility files (from styles/)",
      "items": {
        "type": "string",
        "pattern": "^[a-z-]+\\.js$"
      }
    },
    "dependencies": {
      "type": "array",
      "description": "Component dependencies to load before main components",
      "items": {
        "type": "string",
        "pattern": "^wb-[a-z-]+$"
      }
    },
    "components": {
      "type": "array",
      "description": "Main components to load last",
      "items": {
        "type": "string",
        "pattern": "^wb-[a-z-]+$"
      }
    },
    "metadata": {
      "type": "object",
      "description": "Additional metadata about the manifest",
      "properties": {
        "lastUpdated": {
          "type": "string"
        },
        "author": {
          "type": "string"
        },
        "notes": {
          "type": "string"
        }
      }
    }
  },
  "required": ["infrastructure", "components"]
}
