{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["DOM", "ES2020"],
    "jsx": "react-jsx",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "rootDir": "./",
    "declaration": true,
    "sourceMap": true
  },
  "include": [
    "src/**/*.ts", 
    "src/**/*.tsx", 
    "*.ts", 
    "*.tsx", 
    "Tests/**/*.ts", 
    "Tests/**/*.tsx",
    "themes/**/*.ts", 
    "themes/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.js"
  ]
}
