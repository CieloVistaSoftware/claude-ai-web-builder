{
  "component": {
    "name": "change-text",
    "version": "1.0.0",
    "description": "Text editing component for semantic HTML elements",
    "type": "utility"
  },
  "config": {
    "classes": {
      "overlay": "change-text-overlay",
      "modal": "change-text-modal",
      "header": "change-text-header",
      "title": "change-text-title",
      "close": "change-text-close",
      "content": "change-text-content",
      "textarea": "change-text-textarea",
      "actions": "change-text-actions",
      "button": "change-text-btn",
      "editing": "change-text-editing"
    },
    "selectors": {
      "targetElements": ["header", "nav", "main", "article", "section", "aside", "footer", "h1", "h2", "h3", "h4", "h5", "h6", "p", "div", "span"]
    },
    "defaults": {
      "triggerEvent": "dblclick",
      "closeOnEscape": true,
      "closeOnOverlay": true,
      "preserveFormatting": true,
      "autoSave": false
    },
    "events": {
      "ready": "changeTextReady",
      "edit": "changeTextEdit",
      "save": "changeTextSave",
      "cancel": "changeTextCancel",
      "change": "changeTextChange"
    }
  },
  "styling": {
    "theme": "dark",
    "transitions": true,
    "animations": true
  },
  "accessibility": {
    "focusManagement": true,
    "keyboardNavigation": true,
    "screenReader": true,
    "ariaLabels": true
  }
}