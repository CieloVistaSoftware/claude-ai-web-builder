{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Control Panel Component Schema",
  "description": "Schema for control-panel Web Component - comprehensive website builder control interface",
  "type": "object",
  "properties": {
    "version": {
      "type": "string",
      "const": "1.0.0"
    }
  },
  "tags": [
    {
      "name": "wb-control-panel",
      "description": "Web Component for comprehensive website builder control panel with theme, layout, color, and edit mode management",
      "attributes": [
        {
          "name": "visible",
          "description": "Control panel visibility state",
          "valueSet": "boolean",
          "values": [
            {
              "name": "true",
              "description": "Show control panel"
            },
            {
              "name": "false",
              "description": "Hide control panel (default)"
            },
            {
              "name": "",
              "description": "Show control panel (boolean attribute)"
            }
          ]
        },
        {
          "name": "position",
          "description": "Control panel positioning mode",
          "valueSet": "position",
          "values": [
            {
              "name": "fixed",
              "description": "Fixed positioning (default)"
            },
            {
              "name": "floating",
              "description": "Floating position (draggable)"
            },
            {
              "name": "docked",
              "description": "Docked to screen edge"
            }
          ]
        },
        {
          "name": "theme",
          "description": "Control panel theme",
          "valueSet": "theme",
          "values": [
            {
              "name": "auto",
              "description": "Auto-detect theme (default)"
            },
            {
              "name": "light",
              "description": "Light theme"
            },
            {
              "name": "dark",
              "description": "Dark theme"
            }
          ]
        },
        {
          "name": "width",
          "description": "Control panel width",
          "valueSet": "dimension",
          "values": [
            {
              "name": "300px",
              "description": "Default width (300px)"
            },
            {
              "name": "280px",
              "description": "Compact width (280px)"
            },
            {
              "name": "320px",
              "description": "Wide width (320px)"
            },
            {
              "name": "100%",
              "description": "Full width (mobile)"
            }
          ]
        },
        {
          "name": "config",
          "description": "JSON configuration for control panel sections and controls",
          "valueSet": "json"
        },
        {
          "name": "draggable",
          "description": "Enable drag-to-move functionality",
          "valueSet": "boolean",
          "values": [
            {
              "name": "true",
              "description": "Enable dragging"
            },
            {
              "name": "false",
              "description": "Disable dragging (default)"
            },
            {
              "name": "",
              "description": "Enable dragging (boolean attribute)"
            }
          ]
        },
        {
          "name": "collapsible",
          "description": "Enable collapse/expand functionality",
          "valueSet": "boolean",
          "values": [
            {
              "name": "true",
              "description": "Enable collapsing (default)"
            },
            {
              "name": "false",
              "description": "Disable collapsing"
            },
            {
              "name": "",
              "description": "Enable collapsing (boolean attribute)"
            }
          ]
        },
        {
          "name": "id",
          "description": "Unique identifier for the component instance"
        },
        {
          "name": "class",
          "description": "CSS classes to apply to the component"
        },
        {
          "name": "role",
          "description": "ARIA role for accessibility",
          "valueSet": "aria-role"
        },
        {
          "name": "aria-label",
          "description": "Accessible label for screen readers"
        },
        {
          "name": "aria-describedby",
          "description": "ID of element that describes this component"
        }
      ],
      "references": [
        {
          "name": "Control Panel Documentation",
          "url": "components/wb-control-panel/control-panel.md"
        }
      ]
    }
  ],
  "globalAttributes": [
    {
      "name": "data-*",
      "description": "Custom data attributes for component configuration"
    }
  ],
  "valueSets": [
    {
      "name": "boolean",
      "values": [
        {
          "name": "true",
          "description": "Boolean true value"
        },
        {
          "name": "false",
          "description": "Boolean false value"
        },
        {
          "name": "",
          "description": "Empty string evaluates to true for boolean attributes"
        }
      ]
    },
    {
      "name": "position",
      "values": [
        {
          "name": "fixed",
          "description": "Fixed positioning on screen"
        },
        {
          "name": "floating",
          "description": "Floating position (user can drag)"
        },
        {
          "name": "docked",
          "description": "Docked to screen edge"
        }
      ]
    },
    {
      "name": "theme",
      "values": [
        {
          "name": "auto",
          "description": "Auto-detect from system preference"
        },
        {
          "name": "light",
          "description": "Light color scheme"
        },
        {
          "name": "dark",
          "description": "Dark color scheme"
        }
      ]
    },
    {
      "name": "dimension",
      "values": [
        {
          "name": "300px",
          "description": "Default size (300px)"
        },
        {
          "name": "280px",
          "description": "Compact size (280px)"
        },
        {
          "name": "320px",
          "description": "Large size (320px)"
        },
        {
          "name": "100%",
          "description": "Full width/height"
        },
        {
          "name": "auto",
          "description": "Automatic sizing"
        }
      ]
    },
    {
      "name": "json",
      "values": [
        {
          "name": "{}",
          "description": "Empty JSON object"
        },
        {
          "name": "{\"sections\": []}",
          "description": "Basic sections configuration"
        }
      ]
    }
  ]
}