{
  "name": "color-bars",
  "displayName": "Color Bars",
  "description": "A comprehensive HSL color picker with hue, saturation, and lightness controls",
  "version": "1.0.0",
  "type": "web-component",
  "category": "form",
  "tags": ["color", "picker", "hsl", "form", "input", "ui"],
  "author": "Website Builder",
  "license": "MIT",
  
  "files": {
    "component": "color-bars.js",
    "styles": null,
    "config": "color-bars.json",
    "demo": "color-bars-demo.html",
    "documentation": "color-bars.md"
  },
  
  "attributes": {
    "hue": {
      "type": "number",
      "default": 240,
      "min": 0,
      "max": 360,
      "description": "Initial hue value (0-360 degrees)"
    },
    "saturation": {
      "type": "number", 
      "default": 70,
      "min": 0,
      "max": 100,
      "description": "Initial saturation percentage (0-100%)"
    },
    "lightness": {
      "type": "number",
      "default": 50,
      "min": 0,
      "max": 100,
      "description": "Initial lightness percentage (0-100%)"
    },
    "disabled": {
      "type": "boolean",
      "default": false,
      "description": "Disables the color picker"
    },
    "theme": {
      "type": "string",
      "default": "light",
      "options": ["light", "dark"],
      "description": "Theme variant"
    },
    "label": {
      "type": "string",
      "default": "Color",
      "description": "Label text for the color picker"
    }
  },
  
  "properties": {
    "hue": {
      "type": "number",
      "readonly": false,
      "description": "Current hue value (0-360)"
    },
    "saturation": {
      "type": "number", 
      "readonly": false,
      "description": "Current saturation value (0-100)"
    },
    "lightness": {
      "type": "number",
      "readonly": false,
      "description": "Current lightness value (0-100)"
    },
    "color": {
      "type": "object",
      "readonly": true,
      "description": "Current color data object with hsl, hex, and rgb values"
    }
  },
  
  "methods": {
    "setColor": {
      "description": "Set HSL color values",
      "parameters": [
        {
          "name": "hue",
          "type": "number",
          "optional": true,
          "description": "Hue value (0-360)"
        },
        {
          "name": "saturation", 
          "type": "number",
          "optional": true,
          "description": "Saturation value (0-100)"
        },
        {
          "name": "lightness",
          "type": "number", 
          "optional": true,
          "description": "Lightness value (0-100)"
        }
      ]
    }
  },
  
  "events": {
    "colorchange": {
      "description": "Fired when color changes (real-time while dragging)",
      "detail": {
        "hue": "number",
        "saturation": "number", 
        "lightness": "number",
        "hsl": "string",
        "hex": "string",
        "rgb": "object"
      }
    },
    "colorselect": {
      "description": "Fired when user finishes selecting a color",
      "detail": {
        "hue": "number",
        "saturation": "number",
        "lightness": "number", 
        "hsl": "string",
        "hex": "string",
        "rgb": "object"
      }
    },
    "colorcopied": {
      "description": "Fired when hex value is copied to clipboard",
      "detail": {
        "hex": "string"
      }
    }
  },
  
  "features": [
    "Interactive HSL color selection",
    "Three separate control bars (hue, saturation, lightness)",
    "Real-time color preview",
    "Mouse, touch, and keyboard support",
    "Copy to clipboard functionality",
    "Accessibility features",
    "Theme support (light/dark)",
    "Material Design inspired UI",
    "Color value display (HSL, RGB, HEX)",
    "Responsive design"
  ],
  
  "accessibility": {
    "keyboard": true,
    "screenReader": true,
    "focusManagement": true,
    "ariaLabels": true
  },
  
  "browser_support": {
    "chrome": "54+",
    "firefox": "63+", 
    "safari": "10.1+",
    "edge": "79+"
  },
  
  "dependencies": [],
  
  "usage_examples": [
    {
      "title": "Basic Usage",
      "code": "<color-bars></color-bars>"
    },
    {
      "title": "With Initial Values",
      "code": "<color-bars hue=\"120\" saturation=\"80\" lightness=\"60\"></color-bars>"
    },
    {
      "title": "With Label",
      "code": "<color-bars label=\"Primary Color\" hue=\"240\"></color-bars>"
    },
    {
      "title": "Dark Theme",
      "code": "<color-bars theme=\"dark\" hue=\"300\"></color-bars>"
    },
    {
      "title": "Event Handling",
      "code": "document.querySelector('color-bars').addEventListener('colorchange', (e) => {\n  console.log(e.detail.hex);\n});"
    }
  ]
}