{
  "component": {
    "name": "color-bar",
    "version": "1.0.0",
    "description": "Website Builder color slider component for HSL color manipulation",
    "type": "input-component",
    "author": "Website Builder System",
    "dependencies": [],
    "assets": [
      "color-bar.js",
      "color-bar-demo.html",
      "color-bar.json",
      "color-bar.md"
    ]
  },
  "configuration": {
    "cssVariables": {
      "height": "--color-bar-height",
      "borderRadius": "--color-bar-border-radius",
      "transition": "--color-bar-transition",
      "thumbSize": "--color-bar-thumb-size"
    },
    "colorBindings": {
      "primary": "--primary",
      "accent": "--accent",
      "neutral300": "--neutral-300",
      "neutral500": "--neutral-500",
      "neutral600": "--neutral-600",
      "neutral700": "--neutral-700",
      "bgSecondary": "--bg-secondary",
      "textPrimary": "--text-primary",
      "textSecondary": "--text-secondary",
      "borderColor": "--border-color"
    },
    "spacingBindings": {
      "xs": "--space-xs",
      "sm": "--space-sm",
      "md": "--space-md"
    }
  },
  "classes": {
    "base": "color-bar",
    "container": "color-bar-container",
    "slider": "color-bar-slider",
    "track": "color-bar-track",
    "thumb": "color-bar-thumb",
    "label": "color-bar-label",
    "value": "color-bar-value",
    "types": {
      "hue": "color-bar--hue",
      "saturation": "color-bar--saturation", 
      "lightness": "color-bar--lightness",
      "alpha": "color-bar--alpha"
    },
    "states": {
      "disabled": "color-bar--disabled",
      "focused": "color-bar--focused",
      "dragging": "color-bar--dragging"
    }
  },
  "defaults": {
    "hue": 240,
    "saturation": 70,
    "lightness": 50,
    "theme": "light",
    "disabled": false,
    "height": "0.9rem",
    "pointerSize": "1.1rem",
    "showLabel": true,
    "showValue": true
  },
  "events": {
    "colorchange": "Fired when color changes (real-time)",
    "colorselect": "Fired when user finishes selecting color"
  },
  "colorTypes": {
    "hue": {
      "min": 0,
      "max": 360,
      "step": 1,
      "unit": "°",
      "gradient": "linear-gradient(to right, #ff0000, #ffff00, #00ff00, #00ffff, #0000ff, #ff00ff, #ff0000)"
    },
    "saturation": {
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "%",
      "gradient": "linear-gradient(to right, #808080, var(--current-hue-color, #0066ff))"
    },
    "lightness": {
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "%",
      "gradient": "linear-gradient(to right, #000000, var(--current-hue-color, #808080), #ffffff)"
    },
    "alpha": {
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "%",
      "gradient": "linear-gradient(to right, transparent, var(--current-color, #000000))"
    }
  },
  "api": {
    "properties": {
      "hue": {
        "description": "Get/set hue value (0-360)",
        "type": "number",
        "range": "0-360"
      },
      "saturation": {
        "description": "Get/set saturation value (0-100)",
        "type": "number", 
        "range": "0-100"
      },
      "lightness": {
        "description": "Get/set lightness value (0-100)",
        "type": "number",
        "range": "0-100"
      },
      "color": {
        "description": "Get current color data object",
        "type": "object",
        "readonly": true
      }
    },
    "methods": {
      "setColor": {
        "description": "Set all color values at once",
        "parameters": [
          "hue (number): Hue value 0-360",
          "saturation (number, optional): Saturation 0-100", 
          "lightness (number, optional): Lightness 0-100"
        ],
        "returns": "void"
      },
      "copyColorToClipboard": {
        "description": "Copy current hex color to clipboard",
        "parameters": [],
        "returns": "Promise<void>"
      }
    }
  },
  "controlPanelIntegration": {
    "reactsToColorChanges": true,
    "reactsToThemeChanges": true,
    "reactsToSpacingChanges": true,
    "bindsToCSSVariables": true,
    "dispatchesEvents": [
      "colorchange",
      "colorselect"
    ],
    "listensForEvents": [
      "themeChanged"
    ]
  },
  "webComponent": {
    "tagName": "color-bar",
    "attributes": [
      "hue",
      "saturation", 
      "lightness",
      "disabled",
      "theme"
    ],
    "properties": [
      "hue",
      "saturation",
      "lightness",
      "color",
      "disabled"
    ],
    "methods": [
      "setColor",
      "copyColorToClipboard"
    ],
    "events": [
      "colorchange",
      "colorselect"
    ]
  },
  "accessibility": {
    "features": [
      "keyboard navigation",
      "screen reader support", 
      "focus management",
      "ARIA attributes",
      "value announcements",
      "arrow key fine-tuning"
    ],
    "keyboardControls": {
      "ArrowLeft": "Decrease hue by 1° (Shift for 10°)",
      "ArrowRight": "Increase hue by 1° (Shift for 10°)",
      "ArrowDown": "Decrease hue by 1° (Shift for 10°)",
      "ArrowUp": "Increase hue by 1° (Shift for 10°)",
      "Home": "Jump to hue 0°",
      "End": "Jump to hue 360°"
    },
    "attributes": {
      "role": "slider",
      "aria-valuemin": "dynamic",
      "aria-valuemax": "dynamic", 
      "aria-valuenow": "dynamic",
      "aria-label": "dynamic"
    }
  },
  "usage": {
    "examples": {
      "basic": "<color-bar></color-bar>",
      "withValues": "<color-bar hue=\"120\" saturation=\"80\" lightness=\"60\"></color-bar>",
      "withLabel": "<color-bar hue=\"240\"><span slot=\"label\">Primary Color</span></color-bar>",
      "darkTheme": "<color-bar theme=\"dark\" hue=\"300\"></color-bar>",
      "javascript": "const colorBar = document.createElement('color-bar'); colorBar.hue = 240; colorBar.addEventListener('colorchange', (e) => console.log(e.detail.hex));"
    },
    "bestPractices": [
      "Use semantic color types (hue, saturation, lightness)",
      "Provide accessible labels for screen readers",
      "Handle color change events for real-time updates",
      "Test with keyboard navigation",
      "Ensure sufficient color contrast",
      "Click to focus before using arrow keys for fine-tuning",
      "Use Shift+arrows for larger adjustments (10° increments)"
    ]
  }
}